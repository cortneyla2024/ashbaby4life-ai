# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/hope_steward"
DIRECT_URL="postgresql://username:password@localhost:5432/hope_steward"

# Authentication
JWT_SECRET="your-super-secret-jwt-key-here"
JWT_EXPIRES_IN="7d"
COOKIE_SECRET="your-cookie-secret-key-here"

# AI Configuration
OLLAMA_BASE_URL="http://localhost:11434"
GEMINI_API_KEY="your-gemini-api-key-here"
OPENAI_API_KEY="your-openai-api-key-here"

# Email Configuration
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
EMAIL_FROM="noreply@hope-steward.com"

# Push Notifications
VAPID_PUBLIC_KEY="your-vapid-public-key"
VAPID_PRIVATE_KEY="your-vapid-private-key"

# Redis Configuration
REDIS_URL="redis://localhost:6379"

# File Storage
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE="10485760" # 10MB

# Security
CORS_ORIGIN="http://localhost:3000"
RATE_LIMIT_WINDOW="900000" # 15 minutes
RATE_LIMIT_MAX="100" # requests per window

# Monitoring
SENTRY_DSN="your-sentry-dsn-here"
LOG_LEVEL="info"

# Development
NODE_ENV="development"
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_API_URL="http://localhost:3000/api"

# Production
# NODE_ENV="production"
# NEXT_PUBLIC_APP_URL="https://hope-steward.com"
# NEXT_PUBLIC_API_URL="https://api.hope-steward.com"

# Analytics
GOOGLE_ANALYTICS_ID="your-ga-id"
MIXPANEL_TOKEN="your-mixpanel-token"

# External Services
STRIPE_SECRET_KEY="your-stripe-secret-key"
STRIPE_PUBLISHABLE_KEY="your-stripe-publishable-key"
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
