# CareConnect AI Platform - Vercel Environment Variables
# Copy this to your Vercel dashboard Environment Variables section

# Essential Application Settings
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://your-domain.vercel.app
NEXT_PUBLIC_APP_NAME=CareConnect AI Platform
NEXT_PUBLIC_APP_VERSION=1.0.0

# Authentication & Security
NEXTAUTH_SECRET=your-super-secret-nextauth-key-change-in-production
NEXTAUTH_URL=https://your-domain.vercel.app
JWT_SECRET=your-super-secret-jwt-key-change-in-production
NEXT_PUBLIC_AUTH_ENABLED=true

# AI Service Configuration
NEXT_PUBLIC_AI_ENABLED=true
AI_SERVICE_API_KEY=your-ai-service-key
NEXT_PUBLIC_AI_MODEL=local
NEXT_PUBLIC_AI_PROVIDER=ollama

# Voice Processing
NEXT_PUBLIC_VOICE_ENABLED=true
NEXT_PUBLIC_SPEECH_RECOGNITION_ENABLED=true
NEXT_PUBLIC_TEXT_TO_SPEECH_ENABLED=true

# Emotion Detection
NEXT_PUBLIC_EMOTION_DETECTION_ENABLED=true
NEXT_PUBLIC_FACIAL_EMOTION_ENABLED=true
NEXT_PUBLIC_VOICE_EMOTION_ENABLED=true

# Feature Flags
NEXT_PUBLIC_FEATURE_VIDEO_CALLS=true
NEXT_PUBLIC_FEATURE_VOICE_ASSISTANT=true
NEXT_PUBLIC_FEATURE_EMOTION_DETECTION=true
NEXT_PUBLIC_FEATURE_AI_CHAT=true
NEXT_PUBLIC_FEATURE_HEALTH_TRACKING=true
NEXT_PUBLIC_FEATURE_FINANCIAL_TRACKING=true
NEXT_PUBLIC_FEATURE_GOAL_TRACKING=true
NEXT_PUBLIC_FEATURE_LEARNING_TRACKING=true
NEXT_PUBLIC_FEATURE_SOCIAL_NETWORK=true
NEXT_PUBLIC_FEATURE_COLLABORATION=true
NEXT_PUBLIC_FEATURE_AUTOMATION=true
NEXT_PUBLIC_FEATURE_NOTIFICATIONS=true
NEXT_PUBLIC_FEATURE_MONITORING=true
NEXT_PUBLIC_FEATURE_ANALYTICS=true
NEXT_PUBLIC_FEATURE_SECURITY=true
NEXT_PUBLIC_FEATURE_FILE_STORAGE=true
NEXT_PUBLIC_FEATURE_DOCUMENT_MANAGEMENT=true
NEXT_PUBLIC_FEATURE_GOVERNMENT_RESOURCES=true
NEXT_PUBLIC_FEATURE_LIFE_HACKS=true
NEXT_PUBLIC_FEATURE_OPTIMIZATION=true
NEXT_PUBLIC_FEATURE_TESTING=true

# Database Configuration (Optional - for future use)
DATABASE_URL=postgresql://username:password@localhost:5432/careconnect
DIRECT_URL=postgresql://username:password@localhost:5432/careconnect

# Redis Configuration (Optional - for caching)
REDIS_URL=redis://localhost:6379

# Analytics (Optional)
NEXT_PUBLIC_ANALYTICS_ID=
NEXT_PUBLIC_ANALYTICS_ENABLED=false

# Monitoring (Optional)
NEXT_PUBLIC_MONITORING_ENABLED=true
SENTRY_DSN=

# File Storage (Optional)
NEXT_PUBLIC_FILE_STORAGE_ENABLED=true
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Email Configuration (Optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=noreply@your-domain.com

# Security Headers
NEXT_PUBLIC_CSP_NONCE=
NEXT_PUBLIC_HSTS_ENABLED=true

# Performance
NEXT_PUBLIC_CACHE_ENABLED=true
NEXT_PUBLIC_CDN_URL=

# Development/Testing
NEXT_PUBLIC_DEBUG_MODE=false
NEXT_PUBLIC_LOG_LEVEL=info
